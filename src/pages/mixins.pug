mixin blogItem(imgPath, title, date, comments, likes, text)
  .blog-item
    .blog-item__img
      img(src=imgPath, alt="Post image")
    .blog-item__descr
      .blog-item__title= title
      .blog-item__info
        .blog-item__date
          img(src="img/blog1/date.svg", alt="Calendar")
          = date
        .blog-item__comments
          img(src="img/blog1/comments.svg", alt="Message")
          = comments
        .blog-item__likes
          img(src="img/blog1/like.svg", alt="Heart")
          = likes
      .blog-item__text= text
      a(href="#").blog-item__link
        | Continue Reading
        .blog-item__arrow